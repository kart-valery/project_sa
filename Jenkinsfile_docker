pipeline {
   agent any
   stages {
    stage('Clone Repo') {
      steps {
      steps{
        git url: 'https://github.com/kart-valery/project_sa.git',
          credentialsId: 'kart_git_hub'
      }
    }
    stage('Install Docker (playbook)'){
      steps{
        ansiblePlaybook credentialsId: 'jenkins_node', disableHostKeyChecking: true, installation: 'ansible', inventory: 'ansible/inv.yaml', playbook: 'ansible/play.yaml'
      }
    }
  }
    post {
        always {
            deleteDir()
        }
    
  }
}
